<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Projeto Saeinfo</title>
    @*@Styles.Render("~/content/css")*@
    <link href="~/Content/style/style.css" rel="stylesheet" />
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>


    <header class="headerHome">
        <div class="container">
            <nav>
                <ul class="menu">
                    <li>@Html.ActionLink("Cadastro de Alunos", "Index", "Aluno")</li>
                    <li>@Html.ActionLink("Alunos por Cidade", "Index", "AlunoCidade")</li>
                    <li>@Html.ActionLink("Cadastro de Cidades", "Index", "Cidade")</li>
                    <li>@Html.ActionLink("Professor", "Index", "Professor")</li>
                    <li>@Html.ActionLink("Cursos", "Index", "Curso")</li>
                    <li>@Html.ActionLink("Relatórios", "Index", "Relatorio")</li>
                    <li>@Html.ActionLink("Gráficos", "Index", "Grafico")</li>
                    <li style="width:100%;text-align:center;">@Html.ActionLink("Sair", "LogOff", "Login")</li>
                </ul>
            </nav>
            @*<button type="button" class="botao botao-primario " style="float:right;margin-top:auto" onclick="window.location.href='@Url.Action("LogOff","Login")'">Sair</button>*@
        </div>
    </header>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Aplicativo SAEINFO</p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    <script src="~/Scripts/jquery.mask.js"></script>
    <script src="~/Scripts/jquery.validate.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
